<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextureView
        android:id="@+id/textureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/planeThing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="matrix"
            android:src="@drawable/plane" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/xVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/azimuth"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

        <TextView
            android:id="@+id/yVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pitch"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/zVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/roll"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/phiWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="phiWindow:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/thetaWindow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="thetaWindow:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/testAircraftVisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="testAircraftVisible: "
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/latVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lat"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/longVal"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:text="@string/longi"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/altVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/alt"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/bThread"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/counter"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>